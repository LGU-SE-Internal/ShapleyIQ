"""
ShapleyIQ Package Manifest
"""

include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include source code
recursive-include src/shapleyiq *.py
recursive-include src/shapleyiq */__init__.py

# Include example data (if any)
recursive-include src/shapleyiq/data *.json *.csv

# Include documentation
recursive-include docs *.rst *.md *.txt *.py
recursive-include docs/_static *
recursive-include docs/_templates *

# Exclude development and build artifacts
exclude .gitignore
exclude .flake8
exclude .pre-commit-config.yaml
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .DS_Store
exclude build/
exclude dist/
exclude *.egg-info/
exclude .pytest_cache/
exclude .mypy_cache/
exclude .coverage
exclude htmlcov/

# Exclude original code directories
exclude rca4tracing/
exclude introduction_examples/
exclude prepare_data/
exclude run/
